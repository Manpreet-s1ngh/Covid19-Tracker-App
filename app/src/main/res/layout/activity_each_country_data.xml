                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Tests"
                        android:gravity="center"
                        android:textColor="@color/pink"
                        android:layout_marginTop="25dp"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/activity_each_country_data_tests_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_marginBottom="25dp"
                        android:textColor="#000"
                        android:textSize="24sp" />

                </LinearLayout>-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/totalTests"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:fontFamily="@font/ubantu_medium"
                        android:gravity="center"
                        android:text="Total Tests"
                        android:textColor="@color/pink"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/imageTotalTests"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageTotalTests"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:src="@drawable/sample_tested"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activity_each_country_data_tests_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:fontFamily="@font/ubantu_medium"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="@dimen/_17ssp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/imageTotalTests"
                        app:layout_constraintTop_toBottomOf="@+id/totalTests" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- World Bottm Sheet-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_centerInParent="true"
        android:background="@drawable/curvy_nav_bar"
        android:paddingTop="@dimen/_1sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/indiaDataLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector2"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_4sdp">

            <ImageView
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/india_round"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubantu_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="India"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

        <!--Global Card-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_nav_background"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_4sdp">

            <ImageView
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/global"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubantu_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="World"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>


        <!--Third Part-->
        <LinearLayout
            android:id="@+id/GoodHabits"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector2"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_4sdp">

            <ImageView
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/anti_corona"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubantu_medium"
                android:gravity="center"
                android:includeFontPadding="false"

                android:text="Good Habits"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>


        <!--Fourth Part-->
        <LinearLayout
            android:id="@+id/feelingSickLyout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector2"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_4sdp">

            <ImageView
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/help_corona"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubantu_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Feeling Sick ?"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>