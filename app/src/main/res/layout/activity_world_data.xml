                                        android:layout_height="wrap_content"
                                        android:paddingLeft="10dp"
                                        android:text="Active"
                                        android:textColor="#000000"
                                        android:textSize="13sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center_vertical">

                                    <View
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:background="@color/green_pie" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="10dp"
                                        android:text="Recovered"
                                        android:textColor="#000000"
                                        android:textSize="13sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center_vertical">

                                    <View
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:background="@color/red" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="10dp"
                                        android:text="Deaths"
                                        android:textColor="#000000"
                                        android:textSize="13sp" />

                                </LinearLayout>
                            </LinearLayout>-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/_29sdp"
                                tools:ignore="RtlSymmetry">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:gravity="center_vertical">

                                    <View
                                        android:layout_width="@dimen/_12sdp"
                                        android:layout_height="@dimen/_12sdp"
                                        android:background="@color/blue_pie" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/ubantu_medium"
                                        android:paddingLeft="@dimen/_9sdp"
                                        android:text="Active"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/_12ssp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:gravity="center_vertical">

                                    <View
                                        android:layout_width="@dimen/_12sdp"
                                        android:layout_height="@dimen/_12sdp"
                                        android:background="@color/green_pie" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/ubantu_medium"
                                        android:paddingLeft="@dimen/_9sdp"
                                        android:text="Recovered"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/_12ssp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:gravity="center_vertical">

                                    <View
                                        android:layout_width="@dimen/_13sdp"
                                        android:layout_height="@dimen/_13sdp"
                                        android:background="@color/red_pie" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/ubantu_medium"
                                        android:paddingLeft="@dimen/_9sdp"
                                        android:text="Deaths"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/_12ssp" />

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:rowCount="2"
                    tools:ignore="UselessParent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/activity_main_confirmed_card"
                        style="@style/card"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/activity_world_data_confirmed_title_textView"
                                style="@style/heading"
                                android:text="Confirmed"
                                android:textColor="@color/yellow" />

                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/confirmed" />

                            <TextView
                                android:id="@+id/activity_world_data_confirmed_textView"
                                style="@style/counter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#000" />

                            <TextView
                                android:id="@+id/activity_world_data_confirmed_new_textView"
                                style="@style/increment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/yellow" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/activity_main_active_card"
                        style="@style/cardRight"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/activity_world_data_active_title_textView"
                                style="@style/heading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active"
                                android:textColor="@color/blue" />

                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/active" />

                            <TextView
                                android:id="@+id/activity_world_data_active_textView"
                                style="@style/counter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#000" />

                            <TextView
                                android:id="@+id/activity_world_data_active_new_textView"
                                style="@style/increment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/blue" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                     <androidx.cardview.widget.CardView
                         android:id="@+id/activity_main_recovered_card"
                         style="@style/card"
                         app:cardCornerRadius="8dp"
                         app:cardElevation="4dp">

                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:orientation="vertical">

                             <TextView
                                 android:id="@+id/activity_world_data_recovered_title_textView"
                                 style="@style/heading"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:text="Recovered"
                                 android:textColor="@color/green" />

                             <ImageView
                                 android:layout_width="@dimen/_40sdp"
                                 android:layout_height="@dimen/_40sdp"
                                 android:layout_gravity="center_horizontal"
                                 android:src="@drawable/recovered" />

                             <TextView
                                 android:id="@+id/activity_world_data_recovered_textView"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:text=""
                                 android:textColor="#000"
                                style="@style/counter" />

                             <TextView
                                 android:id="@+id/activity_world_data_recovered_new_textView"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"

                                 android:text=""
                                 android:textColor="@color/green"
                                 style="@style/increment" />

                         </LinearLayout>

                         <!--Recovered-->
                     </androidx.cardview.widget.CardView>

                    <!--Deaths-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/activity_main_death_card"
                        style="@style/cardRight"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/activity_world_data_death_title_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Deaths"
                                android:textColor="@color/red"
                                style="@style/heading" />
                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/death" />

                            <TextView
                                android:id="@+id/activity_world_data_death_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#000"
                                style="@style/counter" />

                            <TextView
                                android:id="@+id/activity_world_data_death_new_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/red"
                                style="@style/increment" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>

                <!--Total Tests-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/activity_main_samples_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/totalTests"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_14sdp"
                            android:fontFamily="@font/ubantu_medium"
                            android:gravity="center"
                            android:text="Total Tests"
                            android:textColor="@color/pink"
                            android:textSize="@dimen/_14ssp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/imageTotalTests"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageTotalTests"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:src="@drawable/sample_tested"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/activity_world_data_tests_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:fontFamily="@font/ubantu_medium"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#000"
                            android:textSize="@dimen/_17ssp"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/imageTotalTests"
                            app:layout_constraintTop_toBottomOf="@+id/totalTests" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/activity_main_statewise_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_7sdp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/activity_world_data_countrywise_lin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:padding="@dimen/_4sdp">

                        <ImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/state" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/ubantu_medium"
                            android:paddingStart="@dimen/_4sdp"
                            android:text="Check Status of each Country "
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_15ssp" />

                        <ImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_right" />

                    </LinearLayout>

                    <!-- <LinearLayout
                         android:id="@+id/activity_world_data_countrywise_lin"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:background="?android:attr/selectableItemBackground"
                         android:clickable="true"
                         android:focusable="true"
                         android:gravity="center"
                         android:orientation="vertical"
                         android:padding="10dp">

                         <TextView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="10dp"
                             android:layout_marginBottom="10dp"
                             android:gravity="center"
                             android:text="Country Data"
                             android:textColor="#ff1744"
                             android:textSize="16sp" />

                     </LinearLayout>-->
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- World Bottm Sheet-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/curvy_nav_bar"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/indiaDataLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector2"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <ImageView
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:src="@drawable/india_round"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubantu_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="India"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <!--Global Card-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bottom_nav_background"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <ImageView
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:src="@drawable/global"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubantu_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="World"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>


            <!--Third Part-->
            <LinearLayout
                android:id="@+id/GoodHabits"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector2"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <ImageView
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:src="@drawable/anti_corona"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubantu_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"

                    android:text="Good Habits"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>


            <!--Fourth Part-->
            <LinearLayout
                android:id="@+id/feelingSickLyout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector2"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <ImageView
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:src="@drawable/help_corona"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubantu_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Feeling Sick ?"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>