<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_state_wise_swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StateWiseDataActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/activity_state_wise_search_editText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_margin="@dimen/_4sdp"
            android:background="@drawable/edit_text_bg"
            android:drawableStart="@drawable/search_icon"
            android:drawablePadding="9sp"
            android:hint="Search"
            android:maxLines="1"
            android:inputType="textCapWords"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="@color/gray"
            tools:ignore="RtlSymmetry" />

        <androidx.cardview.widget.CardView
            android:id="@+id/activity_state_wise_title_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_2sdp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_7sdp">

                <TextView

                    android:text="State"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:lines="1"
                    android:fontFamily="@font/ubantu_bold"
                    android:textColor="@color/darkPurple"
                    android:textSize="@dimen/_16ssp"
                   />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:lines="1"
                    android:text="Total Cases"
                    android:fontFamily="@font/ubantu_bold"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_16ssp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_weight="1"
            android:id="@+id/activity_state_wise_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

        <!--India Bottom-->
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:orientation="horizontal"
            android:background="@drawable/curvy_nav_bar">

            <LinearLayout
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bottom_nav_background"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="@dimen/_4sdp">

                <ImageView
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:src="@drawable/india_round"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="India"
                    android:gravity="center"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/ubantu_medium"
                    android:textColor="@color/colorBlack"
                    android:includeFontPadding="false"/>


            </LinearLayout>

            <!--Global Card-->
            <LinearLayout
                android:id="@+id/worldDataLayout"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector2"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="@dimen/_4sdp">
                <ImageView
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:src="@drawable/global"></ImageView>
                <TextView
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="World"
                    android:gravity="center"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/ubantu_medium"
                    android:includeFontPadding="false"/>

            </LinearLayout>


            <!--Third Part-->
            <LinearLayout
                android:id="@+id/GoodHabits"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector2"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="@dimen/_4sdp">

                <ImageView
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:src="@drawable/anti_corona"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Good Habits"
                    android:gravity="center"
                    android:textSize="@dimen/_10ssp"

                    android:fontFamily="@font/ubantu_medium"
                    android:textColor="@color/colorBlack"
                    android:includeFontPadding="false"/>

            </LinearLayout>


            <!--Fourth Part-->
            <LinearLayout
                android:id="@+id/feelingSickLyout"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector2"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="@dimen/_4sdp">

                <ImageView
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:src="@drawable/help_corona"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Feeling Sick ?"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/ubantu_medium"
                    android:includeFontPadding="false"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>