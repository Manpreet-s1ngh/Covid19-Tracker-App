                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_29sdp"
                            tools:ignore="RtlSymmetry">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="@dimen/_12sdp"
                                    android:layout_height="@dimen/_12sdp"
                                    android:background="@color/blue_pie" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ubantu_medium"
                                    android:paddingLeft="@dimen/_9sdp"
                                    android:text="Active"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/_12ssp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="@dimen/_12sdp"
                                    android:layout_height="@dimen/_12sdp"
                                    android:background="@color/green_pie" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ubantu_medium"
                                    android:paddingLeft="@dimen/_9sdp"
                                    android:text="Recovered"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/_12ssp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="@dimen/_13sdp"
                                    android:layout_height="@dimen/_13sdp"
                                    android:background="@color/red_pie" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ubantu_medium"
                                    android:paddingLeft="@dimen/_9sdp"
                                    android:text="Deaths"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/_12ssp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="2"
                tools:ignore="UselessParent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/activity_each_district_confirmed_card"
                    style="@style/card"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activity_each_district_confirmed_title_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/heading"
                            android:text="Confirmed"
                            android:textColor="@color/yellow"
                             />
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/confirmed" />


                        <TextView
                            android:id="@+id/activity_each_district_confirmed_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                           style="@style/counter"
                            android:textColor="#000"
                            />

                        <TextView
                            android:id="@+id/activity_each_district_confirmed_new_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/increment"
                            android:textColor="@color/yellow"
                             />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/activity_each_distict_active_card"
                    style="@style/cardRight"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activity_each_district_active_title_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="Active"
                            android:textColor="@color/blue"
                            style="@style/heading" />
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/active" />


                        <TextView
                            android:id="@+id/activity_each_district_active_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textColor="#000"
                           style="@style/counter" />

                        <TextView
                            android:id="@+id/activity_each_district_active_new_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textColor="@color/blue"
                            style="@style/increment"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/activity_each_district_recovered_card"
                    style="@style/card"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activity_each_district_recovered_title_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="Recovered"
                            android:textColor="@color/green"
                            style="@style/heading" />
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/recovered" />


                        <TextView
                            android:id="@+id/activity_each_district_recovered_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                           style="@style/counter"
                            android:textColor="#000"
                             />

                        <TextView
                            android:id="@+id/activity_each_district_recovered_new_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/increment"
                            android:textColor="@color/green"
                           />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/activity_each_district_death_card"
                    style="@style/cardRight"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activity_each_district_death_title_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Deaths"
                            android:textColor="@color/red"
                            style="@style/heading"
                             />

                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/death" />


                        <TextView
                            android:id="@+id/activity_each_district_death_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            style="@style/counter"
                             />

                        <TextView
                            android:id="@+id/activity_each_district_death_new_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red"
                            style="@style/increment" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!--India Bottom-->
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:orientation="horizontal"
        android:background="@drawable/curvy_nav_bar">

        <LinearLayout
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_nav_background"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/_4sdp">

            <ImageView
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/india_round"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="India"
                android:gravity="center"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/ubantu_medium"
                android:textColor="@color/colorBlack"
                android:includeFontPadding="false"/>


        </LinearLayout>

        <!--Global Card-->
        <LinearLayout
            android:id="@+id/worldDataLayout"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector2"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/_4sdp">
            <ImageView
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/global"></ImageView>
            <TextView
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="World"
                android:gravity="center"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/ubantu_medium"
                android:includeFontPadding="false"/>

        </LinearLayout>


        <!--Third Part-->
        <LinearLayout
            android:id="@+id/GoodHabits"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector2"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/_4sdp">

            <ImageView
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/anti_corona"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Good Habits"
                android:gravity="center"
                android:textSize="@dimen/_10ssp"

                android:fontFamily="@font/ubantu_medium"
                android:textColor="@color/colorBlack"
                android:includeFontPadding="false"/>

        </LinearLayout>


        <!--Fourth Part-->
        <LinearLayout
            android:id="@+id/feelingSickLyout"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector2"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/_4sdp">

            <ImageView
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/help_corona"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feeling Sick ?"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/ubantu_medium"
                android:includeFontPadding="false"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>